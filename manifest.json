{
    "manifest_version": 3,
    "name": "Amazon Products Exporter",
    "version": "1.0",
    "description": "Exporta nombre, estrellas, rese√±as, precio y bayescore de Amazon.",
    "permissions": ["activeTab", "downloads", "scripting", "tabs", "storage", "notifications"],
    "icons": {
      "48": "icon48.png"
    },
    "host_permissions": [
      "*://*.amazon.com.mx/*",
      "*://*.amazon.com/*",
      "*://*.amazon.es/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.amazon.com.mx/*",
          "*://*.amazon.com/*",
          "*://*.amazon.es/*"
        ],
        "js": ["utils/productExtractor.js", "content.js"]
      }
    ]
  }
  